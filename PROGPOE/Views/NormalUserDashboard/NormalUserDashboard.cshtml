@model IEnumerable<PROGPOE.Models.Products>

@{
    Layout = "_Layout";
}

<h2>Product List</h2>
<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Category</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Production Date</th>
            <th>Farmer</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@product.Category.Name</td>
                <td>@product.Price</td>
                <td>@product.Quantity</td>
                <td>@product.ProductionDate.ToString("yyyy-MM-dd")</td>
                <td>@product.Farmer.Name</td>
            </tr>
        }
    </tbody>
</table>
