@model List<PROGPOE.Models.Products>

@{
    Layout = "_Layout";
}

@section Styles {
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(to right, #f8f9fa, #e0e0e0);
        }

        .sidebar {
            background-color: #343a40;
            padding: 15px;
            width: 220px;
            height: 100vh;
            position: fixed;
            left: 0;
        }

            .sidebar a {
                color: #ffffff;
                display: block;
                padding: 10px 15px;
                text-decoration: none;
            }

                .sidebar a:hover {
                    background-color: #495057;
                    border-radius: 5px;
                }

        .main-content {
            margin-left: 240px; /* Space for sidebar */
            padding: 15px;
        }

        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            background: #ffffff;
        }

        .card-title {
            font-weight: bold;
            color: #495057;
        }

        .btn-primary {
            background: linear-gradient(to right, #007bff, #0056b3);
            border: none;
            border-radius: 20px;
            transition: background 0.3s;
        }

            .btn-primary:hover {
                background: linear-gradient(to right, #0056b3, #004085);
            }

        .mt-4, .mb-4 {
            margin-top: 1.5rem !important;
            margin-bottom: 1.5rem !important;
        }

        .card-icon {
            font-size: 2rem;
            color: #007bff;
            margin-bottom: 10px;
        }

        .fa-eye {
            margin-left: 5px;
        }
    </style>
}

<div class="sidebar">
    <ul class="list-unstyled">
        <li>
            <a href="@Url.Action("FarmerDashboard", "FarmerDashboard")">
                <i class="fas fa-tachometer-alt"></i> Dashboard
            </a>
        </li>
        <li>
            <a href="@Url.Action("AddProduct", "FarmerDashboard")">
                <i class="fas fa-user-plus"></i> Add a Product
            </a>
        </li>
        <li>
            <a href="@Url.Action("ProductList", "FarmerDashboard")">
                <i class="fas fa-users"></i> Product List
            </a>
        </li>
        <li>
            <a href="@Url.Action("NormalUserDashboard", "NormalUserDashboard")">
                <i class="fas fa-box"></i> Products
            </a>
        </li>
        <li>
            <a href="@Url.Action("FilterProductsByDate", "EmployeeDashboard")">
                <i class="fas fa-filter"></i> Filter Products
            </a>
        </li>
        <li>
            <a href="@Url.Action("TotalOrders", "EmployeeDashboard")">
                <i class="fas fa-receipt"></i> Total Orders
            </a>
        </li>
    </ul>
</div>

<div class="main-content">
    <h2 class="mt-4 mb-4">Dashboard</h2>
    <div class="row">
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card text-center">
                <div class="card-body">
                    <i class="fas fa-user-plus card-icon"></i>
                    <h5 class="card-title">Add a Product</h5>
                    <p class="card-text">8</p>
                    <a href="@Url.Action("AddProduct", "FarmerDashboard")" class="btn btn-primary">View Details <i class="fas fa-eye"></i></a>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card text-center">
                <div class="card-body">
                    <i class="fas fa-users card-icon"></i>
                    <h5 class="card-title">Product List</h5>
                    <p class="card-text">14</p>
                    <a href="@Url.Action("ProductList", "FarmerDashboard")" class="btn btn-primary">View Details <i class="fas fa-eye"></i></a>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card text-center">
                <div class="card-body">
                    <i class="fas fa-box card-icon"></i>
                    <h5 class="card-title">Products</h5>
                    <p class="card-text">31</p>
                    <a href="@Url.Action("NormalUserDashboard", "NormalUserDashboard")" class="btn btn-primary">View Details <i class="fas fa-eye"></i></a>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card text-center">
                <div class="card-body">
                    <i class="fas fa-filter card-icon"></i>
                    <h5 class="card-title">Filter Products</h5>
                    <a href="@Url.Action("FilterProductsByDate", "EmployeeDashboard")" class="btn btn-primary">View Details <i class="fas fa-eye"></i></a>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card text-center">
                <div class="card-body">
                    <i class="fas fa-sitemap card-icon"></i>
                    <h5 class="card-title">Categories</h5>
                    <p class="card-text">22</p>
                    <a href="@Url.Action("Categories", "EmployeeDashboard")" class="btn btn-primary">View Details <i class="fas fa-eye"></i></a>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card text-center">
                <div class="card-body">
                    <i class="fas fa-receipt card-icon"></i>
                    <h5 class="card-title">Total Orders</h5>
                    <p class="card-text">₹6100</p>
                    <a href="@Url.Action("TotalOrders", "EmployeeDashboard")" class="btn btn-primary">View Details <i class="fas fa-eye"></i></a>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card text-center">
                <div class="card-body">
                    <i class="fas fa-user card-icon"></i>
                    <h5 class="card-title">Account</h5>
                    <p class="card-text">3</p>
                    <a href="@Url.Action("Account", "EmployeeDashboard")" class="btn btn-primary">View Details <i class="fas fa-eye"></i></a>
                </div>
            </div>
        </div>
    </div>
</div>
