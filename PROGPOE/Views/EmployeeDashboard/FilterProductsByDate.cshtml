@model PROGPOE.Models.Farmers

@{
    Layout = "_Layout";
}

@section Styles {
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(to right, #f8f9fa, #e0e0e0);
        }

        .sidebar {
            background-color: #343a40;
            padding: 15px;
            width: 220px;
            height: calc(100vh - 56px); /* 100vh minus the navbar height */
            position: fixed;
            top: 56px; /* Height of the navbar */
            left: 0;
            overflow-y: auto;
        }

            .sidebar a {
                color: #ffffff;
                display: block;
                padding: 10px 15px;
                text-decoration: none;
            }

                .sidebar a:hover {
                    background-color: #495057;
                    border-radius: 5px;
                }

        .main-content {
            margin-left: 240px; /* Space for sidebar */
            padding: 15px;
            padding-top: 75px; /* Space for the navbar */
        }

        .form-group {
            margin-bottom: 15px;
        }

        .btn-primary {
            background: linear-gradient(to right, #007bff, #0056b3);
            border: none;
            border-radius: 20px;
            transition: background 0.3s;
        }

            .btn-primary:hover {
                background: linear-gradient(to right, #0056b3, #004085);
            }
    </style>
}

<div class="sidebar">
    <ul class="list-unstyled">
        <li>
            <a href="@Url.Action("EmployeeDashboard", "EmployeeDashboard")">
                <i class="fas fa-tachometer-alt"></i> Dashboard
            </a>
        </li>
        <li>
            <a href="@Url.Action("AddFarmer", "EmployeeDashboard")">
                <i class="fas fa-user-plus"></i> Add a Farmer
            </a>
        </li>
        <li>
            <a href="@Url.Action("FarmerProfiles", "EmployeeDashboard")">
                <i class="fas fa-users"></i> Farmer Profiles
            </a>
        </li>
        <li>
            <a href="@Url.Action("NormalUserDashboard", "NormalUserDashboard")">
                <i class="fas fa-box"></i> Products
            </a>
        </li>
        <li>
            <a href="@Url.Action("FilterProductsByDate", "EmployeeDashboard")">
                <i class="fas fa-filter"></i> Filter Products
            </a>
        </li>
        <li>
            <a href="@Url.Action("TotalOrders", "EmployeeDashboard")">
                <i class="fas fa-receipt"></i> Total Orders
            </a>
        </li>
    </ul>
</div>


